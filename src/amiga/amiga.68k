    * #6
    .word    sprpt+24,0
    .word    sprpt+26,0
    * #7
    .word    sprpt+28,0
    .word    sprpt+30,0

top_color_line_copper:
	* first colored rows
 	.set    beampos,0x2401
	.rept	NB_ROWS-4
	.word	beampos,0xFFFE
	* 3 first color registers to change dynamically each 8 lines
	.word	color+2,0
	.word	color+4,0
	.word	color+6,0
	.set    beampos,beampos+0x800
	.endr


	
	* pal limit
    .word  0xFFDF,0xFFFE       | PAL wait
 	.set    beampos,0x0401		| more lines to align
bottom_color_line_copper:
	.rept	4
	.word	beampos,0xFFFE
	* the 4 last colored rows
	.word	color+2,0
	.word	color+4,0
	.word	color+6,0
	.set    beampos,beampos+0x800
	.endr
	* the line where "credits" is drawn
    .word	 intreq,0x8010	| no bobs from now on, get more drawing time
	
    .long    -2					
	.ascii	"ENDCPLST"

	* aligning on 8 bytes so .align will work
	* in the next datachip sections
	.align	8
	
