* d7: screen offset
* d0: tile code
*

update_bg_tile:
	and.w	#0xFF,d0	| mask up to 255

	move.w	d7,d3
	and.w	#0x1F,d3	| this is Y (tile)
	addq	#1,d3
	
	lsr.w	#5,d7		| this is X (tile)
	not.w	d7
	add.w	#0x21,d7

	cmp.b	#0xF0,d0
	jne		0f
	cmp.b	#4,d3
	jne		0f
	* remove extra girders at X = (4,11), (4,13) replace by blank
	* (original game used to put black sprites there, which is not that good
	* to save blitter bandwidth). I suppose that game reads video memory
	* to check if those girders are there when Kong climbs the ladder so we
	* can't just remove them in the code
	*
	move.b	#0x10,d0		| draw blank instead of girders
0:

	lea		mulNB_BYTES_PER_ROW_table(pc),a0

	moveq	#1,d4		| 2 bitplanes
	
	move.w	#BG_SCREEN_PLANE_SIZE,d5
	
	* we update the drawed bitplanes and also the backbuffer
	* that we use to erase the sprites with
	.ifeq	OPT_ENABLE_DOUBLE_BUFFERING
	move.l	bg_drawed_screen_ptr(pc),a1
	.else
	lea		bg_screen_data_1,a1
	lea		bg_screen_data_2,a3
	.endif
	lea		bg_background_data,a2
	* D3 = Y

	add.w	d3,d3
	move.w	(a0,d3.w),d3
	lsl.w	#3,d3		| times 8
	add.w	d3,d7
	add.w	d7,a1
	add.w	d7,a2
	.ifne	OPT_ENABLE_DOUBLE_BUFFERING
	add.w	d7,a3
	.endif

	* optimization when a well-known
	* empty character is passed (standard charset)
	cmp.b	#0x10,d0
	jeq	11f

	lea		character_table,a0
	add.w	d0,d0
	add.w	d0,d0
	move.l	(a0,d0.w),d0
	jeq	2f
	move.l	d0,a0		| pointer on char data
	
	* just copy
4:
	.set	offset,0
	.rept	8
	move.b	(a0)+,d0
	move.b	d0,(offset,a1)	
	move.b	d0,(offset,a2)
	.ifne	OPT_ENABLE_DOUBLE_BUFFERING
	move.b	d0,(offset,a3)
	.endif
	.set	offset,offset+NB_BYTES_PER_ROW
	.endr
	add.w	d5,a1
	add.w	d5,a2
	.ifne	OPT_ENABLE_DOUBLE_BUFFERING
	add.w	d5,a3
	.endif
	dbf		d4,4b
0:
	rts

	
	* clear tile

11:

111:
	.set	offset,0
	.rept	8
	clr.b	(offset,a1)
	clr.b	(offset,a2)
	.ifne	OPT_ENABLE_DOUBLE_BUFFERING
	clr.b	(offset,a3)
	.endif
	.set	offset,offset+NB_BYTES_PER_ROW
	.endr
	add.w	d5,a1
	add.w	d5,a2
	.ifne	OPT_ENABLE_DOUBLE_BUFFERING
	add.w	d5,a3
	.endif
	dbf		d4,111b
2:
	rts

12:
	* clut/tile combo not declared as used
	**blitz
	rts

			
